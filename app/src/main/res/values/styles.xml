<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="Widget.CenturionConsole.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.CenturionConsole.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">casual</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.CenturionConsole.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10dp</item>
        <item name="autoSizeMaxTextSize">24dp</item>
        <item name="fontFamily">casual</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.CenturionConsole.NormalText" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10dp</item>
        <item name="autoSizeMaxTextSize">18dp</item>
        <item name="fontFamily">casual</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.CenturionConsole.SmallText" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10dp</item>
        <item name="autoSizeMaxTextSize">14dp</item>
        <item name="fontFamily">casual</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.CenturionConsole.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">casual</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.CenturionConsole.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="materialButtonOutlinedStyle">@color/colorBlack</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="fontFamily">casual</item>
        <item name="android:textSize">10sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="Widget.CenturionConsole.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">casual</item>
        <item name="android:textSize">14sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:padding">0dp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.CenturionConsole.Button.TextButton.Large" parent="Widget.CenturionConsole.Button.TextButton">
        <item name="android:textSize">18sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
    </style>

    <style name="Widget.CenturionConsole.Button.TextButton.Small" parent="Widget.CenturionConsole.Button.TextButton">
        <item name="android:textSize">10sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.CenturionConsole.Button.TextButton.Red" parent="Widget.CenturionConsole.Button.TextButton">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="Widget.CenturionConsole.Button.TextButton.Blue" parent="Widget.CenturionConsole.Button.TextButton">
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="Widget.CenturionConsole.Button.TextButton.Green" parent="Widget.CenturionConsole.Button.TextButton">
        <item name="android:textColor">@color/colorGreen</item>
    </style>
</resources>
