<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/childAttributeModifierName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/TextAppearance.CenturionConsole.SmallText"
        android:maxLines="1"
        android:text="Constitution">

    </TextView>

    <Button
        android:id="@+id/childAttributeModifierValue"
        android:layout_width="50dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@+id/childAttributeModifierName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.CenturionConsole.Button.TextButton.Small"
        android:text="+10">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>